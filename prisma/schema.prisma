model BroadcastRecipient {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  broadcastId String   @db.ObjectId
  userId      String   @db.ObjectId
  status      String   @default("PENDING") // PENDING, SENT, DELIVERED, FAILED, READ
